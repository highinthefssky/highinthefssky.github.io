---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoCard from '../components/VideoCard.astro';

const allVideos = await getCollection('videos');
const sortedVideos = allVideos.sort(
  (a, b) =>
    new Date(b.data.publishedAt).getTime() -
    new Date(a.data.publishedAt).getTime()
);

const allTags = Array.from(
  new Set(allVideos.flatMap((video) => video.data.tags))
).sort();
---

<BaseLayout
  title="Search Videos"
  description="Search and filter videos by title, description, or tags"
>
  <div class="search-page">
    <div class="search-header">
      <h1>Search Videos</h1>
      <p>Find videos using text search or filter by tags</p>
    </div>

    <div class="search-controls">
      <div class="search-box">
        <input
          type="text"
          id="search-input"
          placeholder="Search by title or description..."
          class="search-input"
          autocomplete="off"
        />
        <span class="search-icon">üîç</span>
      </div>

      <div class="filter-section">
        <h3>Filter by Tags</h3>
        <div class="tags-list" id="tags-list">
          {allTags.map((tag) => (
            <button
              class="tag-filter"
              data-tag={tag}
              type="button"
            >
              {tag}
            </button>
          ))}
        </div>
      </div>

      <div class="controls-footer">
        <span id="result-count" class="result-count">
          {allVideos.length} videos
        </span>
        <button id="clear-btn" class="btn-clear" type="button">
          Clear all filters
        </button>
      </div>
    </div>

    <div class="search-results">
      <div class="videos-grid" id="videos-grid">
        {sortedVideos.map((video) => (
          <VideoCard video={video} />
        ))}
      </div>

      <div class="empty-state" id="empty-state" style="display: none;">
        <p>No videos found matching your search.</p>
        <button id="reset-btn" class="btn-reset">Reset search</button>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .search-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .search-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .search-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }

  .search-header p {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .search-controls {
    background: #f9fafb;
    padding: 2rem;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    border: 1px solid #e5e7eb;
  }

  .search-box {
    position: relative;
    margin-bottom: 2rem;
  }

  .search-input {
    width: 100%;
    padding: 1rem;
    padding-right: 2.5rem;
    font-size: 1rem;
    border: 2px solid #d1d5db;
    border-radius: 0.5rem;
    background: white;
    transition: all 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: hsl(213, 94%, 47%);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .search-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #9ca3af;
  }

  .filter-section {
    margin-bottom: 1.5rem;
  }

  .filter-section h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag-filter {
    background: white;
    border: 2px solid #d1d5db;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .tag-filter:hover {
    border-color: hsl(213, 94%, 47%);
    background: #f0f4ff;
  }

  .tag-filter.active {
    background: hsl(213, 94%, 47%);
    border-color: hsl(213, 94%, 47%);
    color: white;
  }

  .controls-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .result-count {
    font-size: 0.95rem;
    color: #6b7280;
    font-weight: 500;
  }

  .btn-clear {
    background: white;
    border: 1px solid #d1d5db;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #374151;
  }

  .btn-clear:hover {
    background: #f3f4f6;
    border-color: #9ca3af;
  }

  .btn-clear:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .search-results {
    min-height: 400px;
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
    color: #6b7280;
  }

  .empty-state p {
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
  }

  .btn-reset {
    background: hsl(213, 94%, 47%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-reset:hover {
    background: hsl(213, 94%, 37%);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .search-page {
      padding: 1rem;
    }

    .search-header h1 {
      font-size: 2rem;
    }

    .search-controls {
      padding: 1.5rem;
    }

    .controls-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .videos-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
    }
  }
</style>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const tagButtons = document.querySelectorAll('.tag-filter');
  const videosGrid = document.getElementById('videos-grid');
  const emptyState = document.getElementById('empty-state');
  const videoCards = document.querySelectorAll('[data-tags]');
  const resultCount = document.getElementById('result-count');
  const clearBtn = document.getElementById('clear-btn');
  const resetBtn = document.getElementById('reset-btn');

  let activeTags = new Set<string>();

  function normalizeString(str: string): string {
    return str.toLowerCase().trim();
  }

  function updateDisplay() {
    let visibleCount = 0;

    videoCards.forEach((card) => {
      const tags = (card.getAttribute('data-tags') || '')
        .split(',')
        .filter((t) => t)
        .map(normalizeString);
      const title = (card.parentElement?.querySelector('.card-title')?.textContent || '')
        .toLowerCase();

      const searchTerm = normalizeString(searchInput.value);
      const matchesSearch =
        !searchTerm ||
        title.includes(searchTerm) ||
        (card.parentElement?.querySelector('.card-content')?.textContent || '')
          .toLowerCase()
          .includes(searchTerm);

      const matchesTags =
        activeTags.size === 0 ||
        Array.from(activeTags).some((tag) => tags.includes(normalizeString(tag)));

      const shouldShow = matchesSearch && matchesTags;
      (card as HTMLElement).parentElement!.style.display = shouldShow ? '' : 'none';

      if (shouldShow) visibleCount++;
    });

    resultCount!.textContent = `${visibleCount} ${visibleCount === 1 ? 'video' : 'videos'}`;
    emptyState!.style.display = visibleCount === 0 ? 'block' : 'none';
    videosGrid!.style.display = visibleCount === 0 ? 'none' : 'grid';

    clearBtn!.disabled = activeTags.size === 0 && !searchInput.value;
  }

  searchInput?.addEventListener('input', updateDisplay);

  tagButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const tag = button.getAttribute('data-tag');
      if (tag) {
        if (activeTags.has(tag)) {
          activeTags.delete(tag);
          button.classList.remove('active');
        } else {
          activeTags.add(tag);
          button.classList.add('active');
        }
        updateDisplay();
      }
    });
  });

  clearBtn?.addEventListener('click', () => {
    searchInput.value = '';
    activeTags.clear();
    tagButtons.forEach((btn) => btn.classList.remove('active'));
    updateDisplay();
  });

  resetBtn?.addEventListener('click', () => {
    searchInput.value = '';
    activeTags.clear();
    tagButtons.forEach((btn) => btn.classList.remove('active'));
    updateDisplay();
  });
</script>
