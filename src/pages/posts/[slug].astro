---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { title, description, publishedAt, tags } = post.data;
const { Content } = await post.render();

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: 'numeric',
    minute: 'numeric',
  }).format(date);
}
---

<BaseLayout title={title} description={description}>
  <article class="post-page">
    <div class="post-header">
      <h1 class="post-title">{title}</h1>
      <div class="post-meta">
        <time datetime={publishedAt.toISOString()}>
          {formatDate(publishedAt)}
        </time>
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <a href={`/posts?tag=${tag}`} class="tag">
                {tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </div>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/posts" class="back-link">‚Üê Back to all posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2.5rem 1.25rem;
    background: rgba(11, 30, 51, 0.7);
    border: 1px solid rgba(125, 211, 252, 0.18);
    border-radius: 1.25rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.35);
    color: #e6efff;
  }

  .post-header {
    margin-bottom: 2rem;
    border-bottom: 1px solid rgba(125, 211, 252, 0.2);
    padding-bottom: 1.25rem;
  }

  .post-title {
    font-size: 2.5rem;
    margin: 0 0 1rem;
    color: #e6efff;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    color: #9fb6d5;
    font-size: 0.95rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: rgba(255, 255, 255, 0.05);
    color: #e6efff;
    padding: 0.3rem 0.9rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    text-decoration: none;
    border: 1px solid rgba(125, 211, 252, 0.25);
    transition: all 0.25s ease;
  }

  .tag:hover {
    background: rgba(125, 211, 252, 0.12);
    color: #7dd3fc;
    border-color: rgba(125, 211, 252, 0.6);
  }

  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #cbd5e1;
    margin-bottom: 2rem;
  }

  /* Markdown content styling */
  :global(.post-content h2) {
    font-size: 1.875rem;
    margin: 1.5rem 0 0.5rem;
    color: #e6efff;
  }

  :global(.post-content h3) {
    font-size: 1.5rem;
    margin: 1.25rem 0 0.5rem;
    color: #e6efff;
  }

  :global(.post-content p) {
    margin-bottom: 1rem;
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  :global(.post-content li) {
    margin-bottom: 0.5rem;
  }

  :global(.post-content blockquote) {
    border-left: 4px solid rgba(125, 211, 252, 0.6);
    padding-left: 1rem;
    margin: 1rem 0;
    color: #9fb6d5;
    font-style: italic;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 0.5rem;
    padding: 1rem;
  }

  :global(.post-content code) {
    background: rgba(255, 255, 255, 0.08);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: 'JetBrains Mono', 'Monaco', 'Menlo', 'Courier New', monospace;
    font-size: 0.9em;
    color: #7dd3fc;
  }

  :global(.post-content pre) {
    background: rgba(11, 30, 51, 0.8);
    color: #e6efff;
    padding: 1rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid rgba(125, 211, 252, 0.2);
  }

  :global(.post-content pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  :global(.post-content img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1rem 0;
  }

  :global(.post-content table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    color: #cbd5e1;
  }

  :global(.post-content th),
  :global(.post-content td) {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem;
    text-align: left;
  }

  :global(.post-content th) {
    background: rgba(255, 255, 255, 0.06);
    font-weight: 600;
  }

  .post-footer {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(125, 211, 252, 0.2);
  }

  .back-link {
    color: #7dd3fc;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #38bdf8;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .post-page {
      padding: 1.25rem;
    }

    .post-title {
      font-size: 1.875rem;
    }

    .post-content {
      font-size: 1rem;
    }
  }
</style>
