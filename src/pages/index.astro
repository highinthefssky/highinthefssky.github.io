---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Carousel from '../components/Carousel.astro';

const allVideos = await getCollection('videos');
const allPosts = await getCollection('posts');
const latestPost = allPosts
  .filter((post) => !post.data.draft)
  .sort(
    (a, b) =>
      new Date(b.data.publishedAt).getTime() -
      new Date(a.data.publishedAt).getTime()
  )[0];
const publishedPosts = allPosts.filter((post) => !post.data.draft);
const totalPosts = publishedPosts.length;

// Import stats (automatically updated by fetch-videos.js)
import stats from '../content/stats.json';
const youtubeSubscribers = stats.youtubeSubscribers;
const totalVideos = stats.totalVideos;

function formatSubscriberCount(count: number): string {
  if (count >= 1000000) {
    return `${Math.floor(count / 1000000)}M+`;
  } else if (count >= 1000) {
    return `${Math.floor(count / 1000)}K+`;
  }
  return `${count}+`;
}

const subscriberDisplay = formatSubscriberCount(youtubeSubscribers);

---

<BaseLayout
  title="Home"
  description="Watch videos and join the community"
>
  <div class="home-page">
    <section class="hero">
      <div class="hero-content">
        <p class="eyebrow">Microsoft Flight Simulator</p>
        <h1 class="hero-title">High in the Sky</h1>
        <p class="hero-subtitle">
          Latest videos, community dispatches, and search-friendly briefings for flight sim enthusiasts.
        </p>
        <div class="hero-cta">
          <a href="/videos" class="btn btn-primary">Browse Video Library</a>
          <a href="/posts" class="btn btn-secondary">Community Posts</a>
        </div>
      </div>
    </section>

    {allVideos.length > 0 && (
      <section class="bento">
        <div class="tile tile-wide">
          <div class="section-header">
            <h2>Latest Videos</h2>
            <p>Fresh sorties from the channel</p>
          </div>
          <Carousel videos={allVideos} autoplay={true} />
        </div>

        {latestPost && (
          <div class="tile tile-post tile-post-link">
            <div class="section-header compact">
              <h2>Featured Community Post</h2>
              <a href="/posts" class="view-all">View all</a>
            </div>
            <a href={`/posts/${latestPost.slug}`} class="post-content">
              <h3>
                {latestPost.data.title}
              </h3>
              <p class="post-meta">
                {new Date(latestPost.data.publishedAt).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </p>
              <p class="post-excerpt">
                {latestPost.data.description || 'Click to read the latest community post'}
              </p>
              <span class="read-more">
                Read full post â†’
              </span>
            </a>
          </div>
        )}

        <div class="tile tile-stats">
          <div class="stat">
            <span class="stat-label">Videos</span>
            <span class="stat-value">{totalVideos}</span>
          </div>
          <div class="stat">
            <span class="stat-label">Community Posts</span>
            <span class="stat-value">{totalPosts}</span>
          </div>
          <div class="stat">
            <span class="stat-label">Latest Sync</span>
            <span class="stat-value">
              {new Date(stats.updatedAt).toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric',
              })}
            </span>
          </div>
        </div>

        <div class="tile tile-links">
          <h3>Quick Navigation</h3>
          <div class="link-grid">
            <a href="/videos" class="quick-link">All Videos</a>
            <a href="/posts" class="quick-link">Community</a>
            <a href="/feed" class="quick-link">Feed</a>
          </div>
        </div>

        <div class="tile tile-cta">
          <h3>Stay Connected</h3>
          <p>Join {subscriberDisplay} flight sim enthusiasts</p>
          <p class="cta-subtext">Subscribe for weekly drop-ins and new liveries.</p>
          <a href="https://bit.ly/34eNWDP" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Subscribe on YouTube
          </a>
          <a href="https://discord.gg/J3tZyhceUM" target="_blank" rel="noopener noreferrer" class="btn btn-discord">
            Join our Discord
          </a>
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .home-page {
    min-height: 100vh;
    color: #e5e7eb;
  }

  .hero {
    padding: 4rem 1.5rem 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 20%, rgba(125, 211, 252, 0.12), transparent 35%),
      radial-gradient(circle at 80% 0%, rgba(14, 165, 233, 0.12), transparent 30%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.85rem;
    color: #7dd3fc;
    margin-bottom: 0.75rem;
  }

  .hero-title {
    font-size: 3.25rem;
    margin-bottom: 1rem;
    font-weight: 700;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #cbd5e1;
  }

  .hero-cta {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.6rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.25s ease;
    border: 1px solid transparent;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #38bdf8 0%, #0ea5e9 100%);
    color: #0b1e33;
    box-shadow: 0 10px 30px rgba(56, 189, 248, 0.25);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 36px rgba(56, 189, 248, 0.35);
  }

  .btn-discord {
    background: linear-gradient(135deg, #7289da 0%, #5865f2 100%);
    color: #ffffff;
    box-shadow: 0 10px 30px rgba(88, 101, 242, 0.25);
    margin-top: 0.75rem;
  }

  .btn-discord:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 36px rgba(88, 101, 242, 0.35);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: #e5e7eb;
    border-color: rgba(255, 255, 255, 0.12);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .btn-ghost {
    background: transparent;
    color: #7dd3fc;
    border-color: rgba(125, 211, 252, 0.4);
  }

  .btn-ghost:hover {
    background: rgba(125, 211, 252, 0.08);
    transform: translateY(-2px);
  }

  .bento {
    max-width: 1280px;
    margin: -2rem auto 0;
    padding: 0 1.5rem 3rem;
    display: grid;
    gap: 1.25rem;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  .tile {
    background: rgba(15, 23, 42, 0.7);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 1rem;
    padding: 1.25rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
  }

  .tile-wide {
    grid-column: span 2;
  }

  .tile-post {
    grid-column: span 1;
  }

  .tile-post,
  .tile-links,
  .tile-stats,
  .tile-cta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    gap: 0.5rem;
  }

  .section-header.compact {
    margin-bottom: 0.5rem;
  }

  .section-header h2 {
    margin: 0;
    font-size: 1.5rem;
    color: #e5e7eb;
  }

  .section-header p {
    color: #94a3b8;
    margin: 0;
  }

  .view-all {
    color: #7dd3fc;
    font-weight: 600;
  }

  .post-content h3 {
    margin: 0 0 0.4rem 0;
    font-size: 1.3rem;
    color: #e5e7eb;
  }

  .post-content h3 a {
    color: #7dd3fc;
  }

  .post-meta {
    color: #94a3b8;
    font-size: 0.9rem;
    margin: 0 0 0.75rem 0;
  }

  .post-excerpt {
    color: #cbd5e1;
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .read-more {
    color: #38bdf8;
    font-weight: 600;
  }

  .tile-post-link {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .tile-post-link:hover {
    border-color: #7dd3fc;
    box-shadow: 0 10px 30px rgba(125, 211, 252, 0.15);
    transform: translateY(-2px);
  }

  .tile-post-link h3 {
    color: inherit;
  }

  .tile-stats {
    gap: 0.9rem;
  }

  .stat {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 0.75rem 0.85rem;
    border-radius: 0.75rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  .stat-label {
    color: #94a3b8;
    font-size: 0.95rem;
  }

  .stat-value {
    font-size: 1.35rem;
    font-weight: 700;
    color: #e5e7eb;
  }

  .tile-links h3 {
    margin: 0 0 0.5rem 0;
    color: #e5e7eb;
  }

  .link-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.5rem;
  }

  .quick-link {
    display: block;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: #e5e7eb;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .quick-link:hover {
    border-color: rgba(56, 189, 248, 0.6);
    color: #7dd3fc;
  }

  .tile-cta p {
    color: #cbd5e1;
    margin: 0 0 1rem 0;
  }

  .cta-subtext {
    font-size: 0.95rem;
    color: #94a3b8;
  }

  @media (max-width: 1024px) {
    .tile-wide {
      grid-column: span 1;
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.4rem;
    }

    .hero-subtitle {
      font-size: 1.05rem;
    }

    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
