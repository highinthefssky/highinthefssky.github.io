---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoCard from '../components/VideoCard.astro';

const allVideos = await getCollection('videos');
const sortedVideos = allVideos.sort(
  (a, b) =>
    new Date(b.data.publishedAt).getTime() -
    new Date(a.data.publishedAt).getTime()
);

const allTags = Array.from(
  new Set(allVideos.flatMap((video) => video.data.tags))
);
---

<BaseLayout title="Videos" description="Browse all videos">
  <div class="videos-page">
    <div class="videos-header">
      <h1>All Videos</h1>
      <p>
        Explore all {allVideos.length} videos from the channel
      </p>
    </div>

    {allTags.length > 0 && (
      <div class="filters">
        <div class="filter-group">
          <label for="tag-filter">Filter by tag:</label>
          <select id="tag-filter" class="tag-select">
            <option value="">All Tags</option>
            {allTags.map((tag) => (
              <option value={tag}>{tag}</option>
            ))}
          </select>
        </div>
      </div>
    )}

    <div class="videos-grid" id="videos-grid">
      {sortedVideos.map((video) => (
        <VideoCard video={video} />
      ))}
    </div>

    {sortedVideos.length === 0 && (
      <div class="empty-state">
        <p>No videos found. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .videos-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .videos-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .videos-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }

  .videos-header p {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .filters {
    margin-bottom: 2rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-group label {
    font-weight: 500;
    color: #374151;
  }

  .tag-select {
    padding: 0.5rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 1rem;
    background-color: white;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .tag-select:hover {
    border-color: #9ca3af;
  }

  .tag-select:focus {
    outline: none;
    border-color: hsl(213, 94%, 47%);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: #6b7280;
  }

  @media (max-width: 768px) {
    .videos-page {
      padding: 1rem;
    }

    .videos-header h1 {
      font-size: 2rem;
    }

    .videos-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
    }
  }
</style>

<script>
  const tagSelect = document.getElementById('tag-filter');
  const videosGrid = document.getElementById('videos-grid');
  const videoCards = videosGrid?.querySelectorAll('[data-tags]');

  tagSelect?.addEventListener('change', (e) => {
    const selectedTag = (e.target as HTMLSelectElement).value;

    videoCards?.forEach((card) => {
      const tags = card.getAttribute('data-tags')?.split(',') || [];
      const matches =
        !selectedTag || tags.includes(selectedTag.toLowerCase());
      (card as HTMLElement).style.display = matches ? '' : 'none';
    });
  });
</script>
