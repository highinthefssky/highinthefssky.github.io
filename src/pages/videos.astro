---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoCard from '../components/VideoCard.astro';
import stats from '../content/stats.json';

const allVideos = await getCollection('videos');
const totalVideos = stats.totalVideos ?? allVideos.length;
const sortedVideos = allVideos.sort(
  (a, b) =>
    new Date(b.data.publishedAt).getTime() -
    new Date(a.data.publishedAt).getTime()
);

const allTags = Array.from(
  new Set(allVideos.flatMap((video) => video.data.tags))
).sort();
---

<BaseLayout title="Video Library" description="Browse and search all videos">
  <div class="videos-page">
    <div class="videos-header">
      <h1>Video Library</h1>
      <p>
        Explore {totalVideos} videos from the channel
      </p>
    </div>

    <div class="search-controls">
      <div class="search-box">
        <input
          type="text"
          id="search-input"
          placeholder="Search videos (e.g. title:landing, description:IFR, navigation tutorial)"
          class="search-input"
          autocomplete="off"
        />
        <span class="search-icon">üîç</span>
      </div>

      <div class="filter-section">
        <div class="filter-header">
          <h3>Filter by Tags</h3>
          <button id="toggle-tags" class="toggle-btn" type="button">‚ñº</button>
        </div>
        <div class="tag-filter-container" id="tag-container" style="display: none;">
          <input
            type="text"
            id="tag-search"
            placeholder="Search tags..."
            class="tag-search-input"
            autocomplete="off"
          />
          <div class="tags-list" id="tags-list">
            {allTags.map((tag) => (
              <button
                class="tag-filter"
                data-tag={tag}
                type="button"
              >
                {tag}
              </button>
            ))}
          </div>
          <div class="selected-tags" id="selected-tags"></div>
        </div>
      </div>

      <div class="controls-footer">
        <span id="result-count" class="result-count" data-total-videos={totalVideos}>
          {totalVideos} videos
        </span>
        <button id="clear-btn" class="btn-clear" type="button">
          Clear all filters
        </button>
      </div>
    </div>

    <div class="search-results">
      <div class="videos-grid" id="videos-grid">
        {sortedVideos.map((video) => (
          <VideoCard video={video} />
        ))}
      </div>

      <div class="empty-state" id="empty-state" style="display: none;">
        <p>No videos found matching your search.</p>
        <button id="reset-btn" class="btn-reset">Reset search</button>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .videos-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .videos-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .videos-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #e6efff;
  }

  .videos-header p {
    font-size: 1.125rem;
    color: #9fb6d5;
  }

  .search-controls {
    background: #0f1b2e;
    padding: 2rem;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    border: 1px solid #2d3f55;
  }

  .search-box {
    position: relative;
    margin-bottom: 2rem;
  }

  .search-input {
    width: 100%;
    padding: 1rem;
    padding-right: 2.5rem;
    font-size: 1rem;
    border: 2px solid #3d5170;
    border-radius: 0.5rem;
    background: #1a2a3f;
    color: #e5e7eb;
    transition: all 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: #7dd3fc;
    box-shadow: 0 0 0 3px rgba(125, 211, 252, 0.1);
  }

  .search-input::placeholder {
    color: #6b8cb3;
  }

  .search-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #7dd3fc;
  }

  .filter-section {
    margin-bottom: 1.5rem;
  }

  .filter-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .filter-section h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #e6efff;
    margin: 0;
  }

  .toggle-btn {
    background: none;
    border: none;
    color: #7dd3fc;
    font-size: 1rem;
    cursor: pointer;
    transition: transform 0.3s ease;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-btn.open {
    transform: rotate(180deg);
  }

  .tag-filter-container {
    background: #1a2a3f;
    border: 1px solid #3d5170;
    border-radius: 0.5rem;
    padding: 1rem;
    max-height: 400px;
    overflow-y: auto;
  }

  .tag-search-input {
    width: 100%;
    padding: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    border: 1px solid #3d5170;
    border-radius: 0.375rem;
    background: #0f1b2e;
    color: #e5e7eb;
    transition: all 0.3s ease;
  }

  .tag-search-input:focus {
    outline: none;
    border-color: #7dd3fc;
    box-shadow: 0 0 0 3px rgba(125, 211, 252, 0.1);
  }

  .tag-search-input::placeholder {
    color: #6b8cb3;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .tag-filter {
    background: #0f1b2e;
    border: 1px solid #3d5170;
    color: #b0c4de;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .tag-filter:hover {
    border-color: #7dd3fc;
    background: #1a3a50;
    color: #e6efff;
  }

  .tag-filter.active {
    background: hsl(213, 94%, 47%);
    border-color: hsl(213, 94%, 47%);
    color: white;
  }

  .selected-tags {
    padding-top: 0.75rem;
    border-top: 1px solid #3d5170;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    min-height: 1rem;
  }

  .selected-tags .tag-filter {
    font-size: 0.8rem;
    padding: 0.35rem 0.75rem;
  }

  .controls-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid #2d3f55;
  }

  .result-count {
    font-size: 0.95rem;
    color: #9fb6d5;
    font-weight: 500;
  }

  .btn-clear {
    background: transparent;
    border: 1px solid #3d5170;
    color: #b0c4de;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-clear:hover {
    background: #1a2a3f;
    border-color: #7dd3fc;
    color: #e6efff;
  }

  .btn-clear:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .search-results {
    min-height: 400px;
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
    color: #9fb6d5;
  }

  .empty-state p {
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
  }

  .btn-reset {
    background: hsl(213, 94%, 47%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-reset:hover {
    background: hsl(213, 94%, 37%);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .videos-page {
      padding: 1rem;
    }

    .videos-header h1 {
      font-size: 2rem;
    }

    .search-controls {
      padding: 1.5rem;
    }

    .controls-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .videos-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
    }
  }
</style>
<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const tagSearchInput = document.getElementById('tag-search') as HTMLInputElement;
  const toggleBtn = document.getElementById('toggle-tags') as HTMLButtonElement;
  const tagContainer = document.getElementById('tag-container') as HTMLDivElement;
  const tagButtons = document.querySelectorAll('.tag-filter');
  const videosGrid = document.getElementById('videos-grid');
  const emptyState = document.getElementById('empty-state');
  const videoCards = document.querySelectorAll('[data-tags]');
  const resultCount = document.getElementById('result-count');
  const clearBtn = document.getElementById('clear-btn');
  const resetBtn = document.getElementById('reset-btn');
  const selectedTagsContainer = document.getElementById('selected-tags') as HTMLDivElement;
  const totalVideos = Number(resultCount?.getAttribute('data-total-videos') || '0');

  let activeTags = new Set<string>();

  // Toggle tag filter visibility
  toggleBtn?.addEventListener('click', () => {
    const isOpen = tagContainer.style.display !== 'none';
    tagContainer.style.display = isOpen ? 'none' : 'block';
    toggleBtn.classList.toggle('open');
  });

  function normalizeString(str: string): string {
    return str.toLowerCase().trim();
  }

  function parseSearchQuery(raw: string): { term: string; field: 'all' | 'title' | 'description' } {
    const trimmed = raw.trim();
    if (!trimmed) return { term: '', field: 'all' };
    const lower = trimmed.toLowerCase();
    if (lower.startsWith('title:')) {
      return { term: trimmed.slice('title:'.length).trim(), field: 'title' };
    }
    if (lower.startsWith('description:')) {
      return { term: trimmed.slice('description:'.length).trim(), field: 'description' };
    }
    return { term: trimmed, field: 'all' };
  }

  function updateSelectedTagsDisplay() {
    selectedTagsContainer.innerHTML = '';
    activeTags.forEach((tag) => {
      const tagBtn = document.createElement('button');
      tagBtn.className = 'tag-filter active';
      tagBtn.textContent = `${tag} ‚úï`;
      tagBtn.type = 'button';
      tagBtn.addEventListener('click', () => {
        activeTags.delete(tag);
        document.querySelector(`[data-tag="${tag}"]`)?.classList.remove('active');
        updateSelectedTagsDisplay();
        updateDisplay();
      });
      selectedTagsContainer.appendChild(tagBtn);
    });
  }

  function updateDisplay() {
    let visibleCount = 0;
    const { term, field } = parseSearchQuery(searchInput.value || '');
    const searchTerm = normalizeString(term);

    videoCards.forEach((card) => {
      const cardEl = card as HTMLElement;
      const tags = (cardEl.getAttribute('data-tags') || '')
        .split(',')
        .filter((t) => t)
        .map(normalizeString);
      const title = normalizeString(cardEl.querySelector('.card-title')?.textContent || '');
      const description = normalizeString(cardEl.querySelector('.card-content')?.textContent || '');

      const matchesSearch =
        !searchTerm ||
        (field === 'title' && title.includes(searchTerm)) ||
        (field === 'description' && description.includes(searchTerm)) ||
        (field === 'all' && (title.includes(searchTerm) || description.includes(searchTerm)));

      const matchesTags =
        activeTags.size === 0 ||
        Array.from(activeTags).some((tag) => tags.includes(normalizeString(tag)));

      const shouldShow = matchesSearch && matchesTags;
      cardEl.style.display = shouldShow ? '' : 'none';

      if (shouldShow) visibleCount++;
    });

    const hasFilters = activeTags.size > 0 || !!searchInput.value.trim();

    if (!hasFilters) {
      // Reset to full set and show the authoritative count from stats
      videoCards.forEach((card) => {
        (card as HTMLElement).style.display = '';
      });
      visibleCount = totalVideos;
    }

    resultCount!.textContent = `${visibleCount} ${visibleCount === 1 ? 'video' : 'videos'}`;
    emptyState!.style.display = visibleCount === 0 ? 'block' : 'none';
    videosGrid!.style.display = visibleCount === 0 ? 'none' : 'grid';
    clearBtn!.disabled = !hasFilters;
  }

  // Tag search filter
  tagSearchInput?.addEventListener('input', (e) => {
    const searchTerm = normalizeString((e.target as HTMLInputElement).value);
    tagButtons.forEach((btn) => {
      const tagText = normalizeString(btn.getAttribute('data-tag') || '');
      btn.style.display = !searchTerm || tagText.includes(searchTerm) ? '' : 'none';
    });
  });

  searchInput?.addEventListener('input', updateDisplay);

  // Allow Enter to trigger search without submitting anything
  searchInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      updateDisplay();
    }
  });

  tagButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const tag = button.getAttribute('data-tag');
      if (tag) {
        if (activeTags.has(tag)) {
          activeTags.delete(tag);
          button.classList.remove('active');
        } else {
          activeTags.add(tag);
          button.classList.add('active');
        }
        updateSelectedTagsDisplay();
        updateDisplay();
      }
    });
  });

  clearBtn?.addEventListener('click', () => {
    searchInput.value = '';
    tagSearchInput.value = '';
    activeTags.clear();
    tagButtons.forEach((btn) => {
      btn.classList.remove('active');
      btn.style.display = '';
    });
    updateSelectedTagsDisplay();
    updateDisplay();
  });

  resetBtn?.addEventListener('click', () => {
    searchInput.value = '';
    tagSearchInput.value = '';
    activeTags.clear();
    tagButtons.forEach((btn) => {
      btn.classList.remove('active');
      btn.style.display = '';
    });
    updateSelectedTagsDisplay();
    updateDisplay();
  });

  // Initialize
  updateSelectedTagsDisplay();
  updateDisplay();
</script>
