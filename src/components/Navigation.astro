---
// Navigation component with links to main pages
---

<nav class="navbar">
  <div class="navbar-container">
    <a href="/" class="navbar-logo">
      High in the Sky
    </a>
    <ul class="navbar-menu">
      <li>
        <a href="/" class="navbar-link" data-link="/">Home</a>
      </li>
      <li>
        <a href="/videos" class="navbar-link" data-link="/videos">Videos</a>
      </li>
      <li>
        <a href="/posts" class="navbar-link" data-link="/posts">Community</a>
      </li>
      <li>
        <a href="/feed" class="navbar-link" data-link="/feed">Feed</a>
      </li>
    </ul>
  </div>
</nav>

<script>
  function updateActiveLink() {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll('.navbar-link');
    
    links.forEach((link) => {
      const linkPath = link.getAttribute('data-link');
      link.classList.remove('active');
      
      if (linkPath === '/' && currentPath === '/') {
        link.classList.add('active');
      } else if (linkPath !== '/' && currentPath.startsWith(linkPath)) {
        link.classList.add('active');
      }
    });
  }
  
  // Update on page load
  updateActiveLink();
  
  // Update on navigation
  window.addEventListener('popstate', updateActiveLink);
</script>

<style>
  .navbar {
    background: rgba(11, 30, 51, 0.9);
    border-bottom: 1px solid rgba(125, 211, 252, 0.18);
    position: sticky;
    top: 0;
    z-index: 50;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(12px);
  }

  .navbar-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .navbar-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #e6efff;
    text-decoration: none;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .navbar-logo:hover {
    color: #7dd3fc;
    transform: translateY(-1px);
  }

  .navbar-menu {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  .navbar-link {
    color: #c8d6ed;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease, transform 0.2s ease;
    display: inline-block;
    padding: 0.35rem 0.5rem;
    border-radius: 0.5rem;
  }

  .navbar-link:hover {
    color: #7dd3fc;
    transform: translateY(-1px);
    background: rgba(125, 211, 252, 0.08);
    text-shadow: 0 0 10px rgba(125, 211, 252, 0.6), 0 0 20px rgba(14, 165, 233, 0.4);
  }

  .navbar-link.active {
    color: #7dd3fc;
    background: rgba(125, 211, 252, 0.12);
    text-shadow: 0 0 8px rgba(125, 211, 252, 0.5);
  }

  @media (max-width: 768px) {
    .navbar-container {
      flex-direction: column;
      gap: 1rem;
    }

    .navbar-menu {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .navbar-logo {
      font-size: 1.25rem;
    }

    .navbar-link {
      font-size: 0.95rem;
    }
  }
</style>
